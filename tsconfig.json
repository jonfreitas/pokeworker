{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "dist",
    "sourceMap": true,
    "declaration": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "test/*": ["./test/*"]
    }
  },
  "files": [
    "./node_modules/@types/mocha/index.d.ts"
  ],
  "include": [
    "src/**/*.ts", "test"
  ],
  "exclude": [
    "node_modules"
  ]
}
